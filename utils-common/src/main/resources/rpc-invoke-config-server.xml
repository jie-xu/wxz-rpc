<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:rpc="http://www.wxz.com/rpc"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.wxz.com/rpc http://www.wxz.com/rpc/rpc.xsd">

    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <rpc:service id="demoAddService"
                 interfaceName="com.github.wxz.rpc.service.AddCalculate"
                 ref="calcAddService" filter="simpleFilter"></rpc:service>

    <rpc:registry id="rpcRegistry"
                  ipAddr="${rpc.server.addr}"
                  echoApiPort="${rpc.server.echo.api.port}"
                  protocol="PROTOSTUFF_SERIALIZE" ></rpc:registry>

    <bean id="calcAddService" class="com.github.wxz.rpc.service.impl.AddCalculateImpl">
    </bean>

    <bean id="simpleFilter" class="com.github.wxz.rpc.filter.support.SimpleFilter">
    </bean>

</beans>
